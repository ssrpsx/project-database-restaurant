FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:alpine
# Copy ไฟล์ที่ build เสร็จแล้วไปที่ Nginx
COPY --from=builder /app/dist /usr/share/nginx/html
# Copy config ของ Nginx (ดูข้อ 2)
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]